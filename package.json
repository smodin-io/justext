{
  "name": "@smodin/justext",
  "version": "0.1.0",
  "description": "Program jusText is a tool for removing boilerplate content, such as navigation links, headers, and footers from HTML pages.",
  "main": "dist/justext.js",
  "module": "dist/justext.mjs",
  "jsnext:main": "dist/justext.mjs",
  "scripts": {
    "prebuild": "eslint lib test",
    "build": "rollup -c --environment BUILD:production",
    "watch": "rollup -c -w",
    "pretest": "rollup -c",
    "test": "mocha",
    "prepublish": "npm test",
    "demo": "copyfiles dist/*.* demo && lite-server",
    "deploy": "copyfiles dist/*.* demo && gh-pages -d demo"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smodin-io/justext.git"
  },
  "keywords": [
    "justext"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smodin-io/justext/issues"
  },
  "files": [
    "lib",
    "dist"
  ],
  "homepage": "https://github.com/smodin-io/justext",
  "dependencies": {
    "axios": "^0.16.2",
    "html-entities": "^1.2.0",
    "htmlparser": "^1.7.7",
    "loglevel": "^1.4.1",
    "sprintf-js": "^1.1.1",
    "string": "^3.3.3"
  },
  "devDependencies": {
    "@types/klaw": "^1.3.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.18.0",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.0.2",
    "copyfiles": "^1.2.0",
    "eslint": "^4.0.0",
    "fs-extra": "^3.0.1",
    "fs-jetpack": "^1.1.0",
    "gh-pages": "^1.0.0",
    "istanbul": "^0.4.5",
    "klaw": "^1.3.1",
    "lite-server": "^2.3.0",
    "mocha": "^3.2.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-istanbul": "^1.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.0.0",
    "sinon": "^2.3.5",
    "sinon-chai": "^2.11.0"
  }
}
